<?xml version="1.0" ?>
<!DOCTYPE actions SYSTEM "action-list.dtd">
<actions>

	<!--
		MAIN PANEL
	-->
	
	<!-- Add Step -->
	<action id="replaydh.ui.core.mainPanel.addStep"
		name="${id}.name" desc="${id}.description" licon="record-step.png" help="true" />
	
	<!-- Update Status -->
	<action id="replaydh.ui.core.mainPanel.updateStatus"
		name="${id}.name" desc="${id}.description" icon="refresh.gif" licon="update-icon.png" help="true" />
	
	<!-- Cancel Update -->
	<action id="replaydh.ui.core.mainPanel.cancelUpdate"
		name="${id}.name" desc="${id}.description" icon="stop.gif" licon="stop-icon.png" help="true" />
	
	<!-- Toggle Tracker Active -->
	<action id="replaydh.ui.core.mainPanel.toggleTrackerActive" type="toggle"
		name="${id}.name" desc="${id}.description" icon="media_playback_start.png" 
		licon="stopwatch-start-icon.png" sicon="media_playback_stop.png" 
		slicon="stopwatch-finish-icon.png" help="true" />
	
	<!-- Toggle Details -->
	<action id="replaydh.ui.core.mainPanel.toggleDetails"
		name="${id}.name" desc="${id}.description" help="true" />
	
	<!-- Toggle Always on Top -->
	<action id="replaydh.ui.core.mainPanel.toggleAlwaysOnTop" type="toggle"
		name="${id}.name" desc="${id}.description"
		icon="icons8-pin-64.png" sicon="icons8-unpin-64.png" help="true" />
	
	<!-- Toggle Help Mode -->
	<action id="replaydh.ui.core.mainPanel.toggleHelpMode" type="toggle"
		name="${id}.name" desc="${id}.description"
		icon="icons8-help-100.png" sicon="icons8-help-yellow-100.png" />
		
	<!-- Change Workspace -->
	<action id="replaydh.ui.core.mainPanel.changeWorkspace"
		name="${id}.name" desc="${id}.description" licon="Documents-icon.png" />
		
	<!-- Import Workspace -->
	<action id="replaydh.ui.core.mainPanel.importWorkspace"
		name="${id}.name" desc="${id}.description" licon="Documents-icon.png" />
	
	<!-- Import Workflow Schema -->
	<action id="replaydh.ui.core.mainPanel.importWorkflowSchema"
		name="${id}.name" desc="${id}.description" />
	
	<!-- Open Workspace Folder -->
	<action id="replaydh.ui.core.mainPanel.openWorkspaceFolder"
		name="${id}.name" desc="${id}.description" icon="fldr_obj.gif" help="true" />
	
	<!-- Clear Resource Cache -->
	<action id="replaydh.ui.core.mainPanel.clearResourceCache"
		name="${id}.name" desc="${id}.description" icon="clear_co.gif" help="true" />
	
	<!-- Show About Dialog -->
	<action id="replaydh.ui.core.mainPanel.about"
		name="${id}.name" desc="${id}.description" />
	
	<!-- Show Preferences Dialog -->
	<action id="replaydh.ui.core.mainPanel.preferences"
		name="${id}.name" desc="${id}.description" />
		
	<!-- Export Statistics -->
	<action id="replaydh.ui.core.mainPanel.exportStatistics"
		name="${id}.name" desc="${id}.description" />
		
	<!-- Reset Statistics -->
	<action id="replaydh.ui.core.mainPanel.resetStatistics"
		name="${id}.name" desc="${id}.description" />
	
	<!-- Exit Client -->
	<action id="replaydh.ui.core.mainPanel.exit"
		name="${id}.name" desc="${id}.description" />
		
	<!-- Restart Client -->
	<action id="replaydh.ui.core.mainPanel.restart"
		name="${id}.name" desc="${id}.description" />
	
	<!-- ToolBar List for header area -->
	<action-list id="replaydh.ui.core.mainPanel.menuBarList">
		<action-list id="replaydh.ui.core.mainPanel.menuBarList.file" name="${id}.name">
			<item type="action" value="replaydh.ui.core.mainPanel.changeWorkspace" />
			<item type="action" value="replaydh.ui.core.mainPanel.importWorkspace" />
			<item type="action" value="replaydh.ui.core.mainPanel.importWorkflowSchema" />
			<separator />
			<item type="action" value="replaydh.ui.core.mainPanel.openWorkspaceFolder" />
			<separator />
			<item type="action" value="replaydh.ui.core.mainPanel.restart" />
			<item type="action" value="replaydh.ui.core.mainPanel.exit" />
		</action-list>
		<action-list id="replaydh.ui.core.mainPanel.menuBarList.tools" name="${id}.name">
			<item type="action" value="replaydh.ui.core.mainPanel.exportStatistics" />
			<item type="action" value="replaydh.ui.core.mainPanel.resetStatistics" />
		</action-list>
		<action-list id="replaydh.ui.core.mainPanel.menuBarList.window" name="${id}.name">
			<item type="action" value="replaydh.ui.core.mainPanel.preferences" />
			<separator/>
			<item type="action" value="replaydh.ui.core.mainPanel.toggleDetails" />
		</action-list>
		<action-list id="replaydh.ui.core.mainPanel.menuBarList.help" name="${id}.name">
			<separator/>
			<item type="action" value="replaydh.ui.core.mainPanel.about" />
		</action-list>
		<item type="glue" />
		<item type="action" value="replaydh.ui.core.mainPanel.toggleHelpMode" />
		<item type="action" value="replaydh.ui.core.mainPanel.toggleAlwaysOnTop" />
	</action-list>
	
</actions>